        String nameOne=sc.nextLine();
        System.out.println("enter the first string :");
        String nameTwo=sc.nextLine();
        int result=nameOne.compareTo(nameTwo);
        if(result==0){
                   System.out.println("both are equal");
                   
    
}else{
    System.out.println("both are not equaL");

