///charAt() method
{
    public static void main(String []args){
        Scanner sc=new Scanner (System.in);
        System.out.println("enter the string :");
        String name=sc.nextLine();
        for( int i=0;i<=name.length();i++){
                    System.out.println(name.charAt(i));

        }
    }
}
